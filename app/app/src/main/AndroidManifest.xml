<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbau.mit.telsc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".view.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_telsc_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.PhoneActivity" />
        <activity android:name=".view.CodeActivity" />
        <activity android:name=".view.ImageEditorActivity" />
        <activity android:name=".view.StickerNameDownloadActivity" />
        <activity android:name=".view.DatabaseActivity" />
        <activity android:name=".view.StickerNameUploadActivity" />
        <activity android:name=".view.ChooseImageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".view.TemplateNameUploadActivity" />
        <activity android:name=".view.TemplateNameDownloadActivity"></activity>
    </application>

</manifest>