<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <LinearLayout
        style="@style/Imgly.Editor.Header"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ly.img.android.ui.widgets.buttons.CancelButton
            android:id="@+id/cancelButton"
            style="@style/Imgly.Editor.Header.Button.CancelButton"
            android:scaleType="center" />

        <ImageButton
            android:id="@+id/downloadTemplate"
            style="@style/Imgly.Editor.Header.Button.AcceptButton"
            android:contentDescription="@string/download_template_from_database"
            android:scaleType="center"
            android:src="@drawable/ic_cloud_download_template_white_24dp" />

        <ImageButton
            android:id="@+id/uploadTemplate"
            style="@style/Imgly.Editor.Header.Button.AcceptButton"
            android:layout_height="wrap_content"
            android:contentDescription="@string/upload_template_to_database"
            android:scaleType="center"
            android:src="@drawable/ic_cloud_upload_template_white_24dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/uploadStickerToDB"
            style="@style/Imgly.Editor.Header.Button.AcceptButton"
            android:contentDescription="@string/save_sticker_to_database"
            android:scaleType="center"
            android:src="@drawable/ic_cloud_upload_sticker_to_database_white_24dp" />

        <ImageButton
            android:id="@+id/uploadSticker"
            style="@style/Imgly.Editor.Header.Button.AcceptButton"
            android:contentDescription="@string/upload_sticker_to_telegram"
            android:scaleType="center"
            android:src="@drawable/ic_file_upload_sticker_to_telegram_white_24dp" />

        <ly.img.android.ui.widgets.buttons.AcceptButton
            android:id="@+id/acceptButton"
            style="@style/Imgly.Editor.Header.Button.AcceptButton"
            android:scaleType="center" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/actionBarTitleBox"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

</RelativeLayout>
